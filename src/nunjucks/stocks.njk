{% extends "templates/layout.njk" %}

{% set title = "Акции" %}


{% block styles %}
    <link rel="stylesheet" href="css/stocks.min.css">
{% endblock %}

{% block content %}
    <section class="hero section">
        <div class="container">
            <nav class="hero__breadcrumbs breadcrumbs">
                <ol class="breadcrumbs__list">
                    <li class="breadcrumbs__item">
                        <a href="./" class="breadcrumbs__link">Главная</a>
                    </li>
                    <li class="breadcrumbs__item">
                        <a href="#" class="breadcrumbs__link">{{ title }}</a>
                    </li>
                </ol>
            </nav>
            <h1 class="hero__title">{{ title }}</h1>
        </div>
    </section>
    <section class="products-layout">
        <div class="products-layout__container container">
            <aside class="products-layout__sidebar sidebar">
                <button class="sidebar__header" type="button">
                    <div class="sidebar__title">Фильтрация по продукции:</div>
                    <div class="sidebar__button">
                        <svg width="19" height="17" viewBox="0 0 19 17" fill="none">
                            <path d="M17.5938 8.50015H6.78313M2.96725 8.50015H1.40625M2.96725 8.50015C2.96725 7.99425 3.16822 7.50907 3.52594 7.15134C3.88367 6.79362 4.36885 6.59265 4.87475 6.59265C5.38065 6.59265 5.86583 6.79362 6.22356 7.15134C6.58128 7.50907 6.78225 7.99425 6.78225 8.50015C6.78225 9.00605 6.58128 9.49123 6.22356 9.84895C5.86583 10.2067 5.38065 10.4076 4.87475 10.4076C4.36885 10.4076 3.88367 10.2067 3.52594 9.84895C3.16822 9.49123 2.96725 9.00605 2.96725 8.50015ZM17.5938 14.2813H12.5642M12.5642 14.2813C12.5642 14.7873 12.3628 15.273 12.005 15.6308C11.6472 15.9886 11.1619 16.1896 10.6559 16.1896C10.15 16.1896 9.66479 15.9878 9.30707 15.6301C8.94934 15.2724 8.74837 14.7872 8.74837 14.2813M12.5642 14.2813C12.5642 13.7753 12.3628 13.2904 12.005 12.9326C11.6472 12.5748 11.1619 12.3738 10.6559 12.3738C10.15 12.3738 9.66479 12.5747 9.30707 12.9325C8.94934 13.2902 8.74837 13.7754 8.74837 14.2813M8.74837 14.2813H1.40625M17.5938 2.71902H14.8769M11.061 2.71902H1.40625M11.061 2.71902C11.061 2.21312 11.262 1.72794 11.6197 1.37022C11.9774 1.01249 12.4626 0.811523 12.9685 0.811523C13.219 0.811523 13.467 0.860862 13.6985 0.956723C13.9299 1.05258 14.1402 1.19309 14.3173 1.37022C14.4944 1.54734 14.6349 1.75763 14.7308 1.98905C14.8267 2.22048 14.876 2.46853 14.876 2.71902C14.876 2.96952 14.8267 3.21756 14.7308 3.44899C14.6349 3.68042 14.4944 3.8907 14.3173 4.06783C14.1402 4.24496 13.9299 4.38546 13.6985 4.48132C13.467 4.57718 13.219 4.62652 12.9685 4.62652C12.4626 4.62652 11.9774 4.42556 11.6197 4.06783C11.262 3.7101 11.061 3.22492 11.061 2.71902Z" stroke="#0079C4" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round"/>
                        </svg>
                    </div>
                </button>
                <div class="sidebar__body">
                    <ul class="sidebar__filters-list">
                        <li class="sidebar__filter-item filter">
                            <div class="filter__header">
                                <div class="filter__title">Цена, ₽</div>
                                <button class="filter__arrow">
                                    <svg width="14" height="9" viewBox="0 0 14 9" fill="none">
                                        <path d="M13 8L7 2L1 8" stroke="currentColor" stroke-width="1.5"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="filter__body">
                                <div class="filter__interval">
                                    <div class="filter__interval-input">
                                        <input type="number" min="0" placeholder="от 0">
                                    </div>
                                    <div class="filter__interval-input">
                                        <input type="number" max="550" placeholder="от 550">
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="sidebar__filter-item filter">
                            <div class="filter__header">
                                <div class="filter__title">Бренд</div>
                                <button class="filter__arrow">
                                    <svg width="14" height="9" viewBox="0 0 14 9" fill="none">
                                        <path d="M13 8L7 2L1 8" stroke="currentColor" stroke-width="1.5"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="filter__body">
                                <ul class="filter__options-list">
                                    {% set brands = ["Komatsu", "Caterpillar", "HITACHI", "Hyundai"] %}
                                    {% for brand in brands %}
                                        <li class="filter__option-item">
                                            <label class="filter__option"> 
                                                <input class="filter__option-input" type="checkbox" name="brand">
                                                <span class="filter__option-box icon icon-check">
                                                    <svg width="11" height="9" viewBox="0 0 11 9" fill="none">
                                                        <path d="M1 4L4 7L8.5 2.5L10 1" stroke="white" stroke-width="1.5"/>
                                                    </svg>
                                                </span>
                                                <span class="filter__option-label">{{ brand }}</span>
                                            </label>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar__filter-item filter">
                            <div class="filter__header">
                                <div class="filter__title">Применяемость</div>
                                <button class="filter__arrow">
                                    <svg width="14" height="9" viewBox="0 0 14 9" fill="none">
                                        <path d="M13 8L7 2L1 8" stroke="currentColor" stroke-width="1.5"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="filter__body">
                                <ul class="filter__options-list">
                                    {% set brands = ["НефАЗ-96896-0110411", "НефАЗ-66062", "НефАЗ-6606", "НефАЗ-96931-10-07"] %}
                                    {% for brand in brands %}
                                        <li class="filter__option-item">
                                            <label class="filter__option"> 
                                                <input class="filter__option-input" type="checkbox" name="brand">
                                                <span class="filter__option-box">
                                                    <svg width="11" height="9" viewBox="0 0 11 9" fill="none">
                                                        <path d="M1 4L4 7L8.5 2.5L10 1" stroke="white" stroke-width="1.5"/>
                                                    </svg>
                                                </span>
                                                <span class="filter__option-label">{{ brand }}</span>
                                            </label>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar__filter-item filter">
                            <div class="filter__header">
                                <div class="filter__title">Стоимость</div>
                                <button class="filter__arrow">
                                    <svg width="14" height="9" viewBox="0 0 14 9" fill="none">
                                        <path d="M13 8L7 2L1 8" stroke="currentColor" stroke-width="1.5"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="filter__body">
                                <div class="filter__interval">
                                    <div class="filter__interval-input">
                                        <input type="number" min="0" placeholder="от 0">
                                    </div>
                                    <div class="filter__interval-input">
                                        <input type="number" max="550" placeholder="от 550">
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="sidebar__filter-item filter">
                            <div class="filter__header">
                                <div class="filter__title">Производительность</div>
                                <button class="filter__arrow">
                                    <svg width="14" height="9" viewBox="0 0 14 9" fill="none">
                                        <path d="M13 8L7 2L1 8" stroke="currentColor" stroke-width="1.5"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="filter__body">
                                <ul class="filter__options-list">
                                    {% set performances = ["Низкая", "Стандартная", "Высокая"] %}
                                    {% for performance in performances %}
                                        <li class="filter__option-item">
                                            <label class="filter__option"> 
                                                <input class="filter__option-input" type="checkbox" name="performance">
                                                <span class="filter__option-box">
                                                    <svg width="11" height="9" viewBox="0 0 11 9" fill="none">
                                                        <path d="M1 4L4 7L8.5 2.5L10 1" stroke="white" stroke-width="1.5"/>
                                                    </svg>
                                                </span>
                                                <span class="filter__option-label">{{ performance }}</span>
                                            </label>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </li>
                        <li class="sidebar__filter-item filter">
                            <div class="filter__header">
                                <div class="filter__title">Частота оборотов</div>
                                <button class="filter__arrow">
                                    <svg width="14" height="9" viewBox="0 0 14 9" fill="none">
                                        <path d="M13 8L7 2L1 8" stroke="currentColor" stroke-width="1.5"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="filter__body">
                                <ul class="filter__options-list">
                                    {% set speed = ["1400 об/мин", "2500 об/мин", "3600 об/мин"] %}
                                    {% for value in speed %}
                                        <li class="filter__option-item">
                                            <label class="filter__option"> 
                                                <input class="filter__option-input" type="checkbox" name="speed">
                                                <span class="filter__option-box">
                                                    <svg width="11" height="9" viewBox="0 0 11 9" fill="none">
                                                        <path d="M1 4L4 7L8.5 2.5L10 1" stroke="white" stroke-width="1.5"/>
                                                    </svg>
                                                </span>
                                                <span class="filter__option-label">{{ value }}</span>
                                            </label>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </aside>
            <main class="products-layout__grid products-layout__grid--cols-3">
                {% for i in range(15) %}
                    <a href="./typical" class="stocks__item stock">
                        <div class="stock__content">
                            <div class="stock__discount"><span class="stock__discount-value">30</span><span class="stock__discount-unit">%</span></div>
                            <div class="stock__date">до 12.05</div>
                            <div class="stock__title">Скидка на запчасти для грузовых прицепов</div>
                        </div>
                        <div class="stock__image">
                            <img src="./images/stock.png" alt="">
                        </div>
                    </a>
                {% endfor %}
            </main>
        </div>
    </section>
    {% include "pages-blocks/info.njk" %}
    {% include "pages-blocks/feedback.njk" %}
{% endblock %}

{% block scripts %}
    <script src="https://api-maps.yandex.ru/2.1/?apikey=d8a21585-38da-456b-a9c1-d0839c8a79fd&load=package.standard&lang=ru_RU" type='text/javascript'></script>
    {{ super() }}
{% endblock %}

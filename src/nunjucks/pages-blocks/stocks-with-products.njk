<section class="products section">
    <div class="section__container container">
        <div class="section__header">
            <h2 class="section__title">{{ stock_title }}</h2>
            <div class="products__swiper-controls swiper-controls">
                <div class="swiper-button-prev">
                    <svg width="14" height="16">
                        <use xlink:href="#arrow_fwd">
                    </svg>
                </div>
                <div class="swiper-pagination"></div> 
                <div class="swiper-button-next">
                    <svg width="14" height="16">
                        <use xlink:href="#arrow_fwd">
                    </svg>
                </div>
            </div>
        </div>
        <div class="products__body section__body">
            <div class="products__swiper swiper">
                <div class="swiper-wrapper">
                    {% set products = [
                        { name: "Оси", img: "product-01.png" },
                        { name: "Подвеска", img: "product-02.png" },
                        { name: "Тормозные системы", img: "product-03.png" },
                        { name: "Комплектующие", img: "product-01.png" },
                        { name: "Запасные части", img: "product-01.png" }
                    ] %}
                    {% for i in range(2) %}
                        {% for product in products %}
                            <a href="/catalog/tormoznye-sistemy/tormoznye-tsilindry/tormoznoy-tsilindr/" class="product-card swiper-slide">
                                <div class="product-card__image">
                                    <img src="/upload/iblock/005/22vh5f092zslwogp8hll8hbw8mpz3rnr.jpg" alt="Тормозной цилиндр">
                                </div>
                                <div class="product-card__content">
                                    <div class="product-card__title">Тормозной цилиндр</div>
                                    <div class="product-card__price">30000 ₽</div>
                                </div>
                            </a>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>